script/source = "extends KinematicBody2D

const MAX_SPEED = 100
const ACCELERATION = 400

onready var animationTree = $AnimationTree
onready var animationPlayer = $AnimationPlayer

var vector = Vector2.ZERO
var status = RUN

enum {
	RUN, ROLL, ATTACK
}

func _physics_process(delta):
	match status:
		RUN:
			run(delta)
			
func run(delta):
	var x = Input.get_action_strength(\"ui_right\") - Input.get_action_strength(\"ui_left\")
	var y = Input.get_action_strength(\"ui_down\") - Input.get_action_strength(\"ui_up\")
	var inputVector = Vector2(x, y).normalized()
	if (inputVector.length() > 0):
		status = RUN
		animationTree.set(\"parameters/RUN/blend_position\", inputVector)
		animationTree.set(\"parameters/IDLE/blend_position\", inputVector)
		animationTree[\"parameters/playback\"].travel(\"RUN\")
		vector = vector.move_toward(inputVector * MAX_SPEED,  ACCELERATION * delta)
	else:
		animationTree[\"parameters/playback\"].travel(\"IDLE\")
		vector = vector.move_toward(Vector2.ZERO,  ACCELERATION * delta)
		
	vector = move_and_slide(vector)

	
	
func attack():
	pass
	
func roll():
	pass

# Called every frame. 'delta' is the elapsed time since the previous frame.
#func _process(delta):
#	pass
"

